{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "DOM.Iterable", "DOM.AsyncIterable", "ESNext"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "@intlify/unplugin-vue-i18n/messages",
      "unplugin-vue-router/client"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "auto-imports.d.ts",
    "components.d.ts",
    "typed-router.d.ts"
  ],
  "exclude": ["node_modules", "src/App.vue", "src/main.ts"]
}
