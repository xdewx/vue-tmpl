{
  "name": "@leoking/naive-ui",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "files": [
    "lib",
    "eslint.config.js",
    "auto-imports.d.ts",
    "components.d.ts",
    "tsconfig.lib.json",
    "tsconfig.lib.ts"
  ],
  "exports": {
    ".": {
      "import": {
        "default": "./lib/index.es.js",
        "types": "./lib/index.d.ts"
      },
      "require": {
        "default": "./lib/index.cjs",
        "types": "./lib/index.d.ts"
      }
    },
    "./*": "./lib/*"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "build:hash": "cross-env VITE_ROUTER_MODE=hash bun run build",
    "build:lib": "vite build --config vite.config.lib.ts && vue-tsc -p tsconfig.lib.json",
    "preview": "vite preview",
    "lint": "eslint src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "prepare": "husky",
    "release": "release-it"
  },
  "dependencies": {
    "@leoking/naive-ui": "file:",
    "@vueuse/core": "^13.9.0",
    "@vueuse/math": "^13.9.0",
    "lodash-es": "^4.17.21",
    "pinia": "^3.0.4",
    "vue": "^3.5.24",
    "vue-i18n": "^11.2.1",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@vueuse/head": "^2.0.0",
    "prettier": "^3.6.2",
    "lint-staged": "^16.2.7",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "@intlify/unplugin-vue-i18n": "^11.0.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@types/bun": "latest",
    "@unocss/eslint-config": "^66.5.9",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue-macros/eslint-config": "^3.1.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "release-it": "^19.2.4",
    "sass-embedded": "^1.93.3",
    "simple-git-hooks": "^2.13.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.47.0",
    "unocss": "^66.5.9",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-icons": "^22.5.0",
    "unplugin-vue-components": "^30.0.0",
    "unplugin-vue-router": "^0.17.1",
    "vite": "^7.2.4",
    "vitest": "^4.0.13",
    "vue-tsc": "^3.1.5",
    "naive-ui": "^2.43.2",
    "vfonts": "^0.0.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "bun run format:check && bun run lint",
    "preserveUnused": true
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
